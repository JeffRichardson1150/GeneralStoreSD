@model IEnumerable<GeneralStore.MVC.Models.Customer>

@{
    ViewBag.Title = "Customer";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Add a Customer", "Create")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FullName)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                <!-- Change is the Text displayed on the link.
                    Edit is the Action name (will have an Edit action in the Controller
                    Route values = the object item.RestaurantID (will pass this to the route)
                    The pipe (|) is just an organizer -->
                @Html.ActionLink("Change", "Edit", new { id = item.CustomerId }) |
                @Html.ActionLink("More Info", "Details", new { id = item.CustomerId }) |
                @Html.ActionLink("Remove", "Delete", new { id = item.CustomerId })
            </td>
        </tr>
    }
</table>
